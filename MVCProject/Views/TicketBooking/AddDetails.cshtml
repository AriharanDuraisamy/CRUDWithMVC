@model DapperDataAccessLayer.TicketModel

@{
    ViewData["Title"] = "AddDetails";
}
<div class="">
<h1>TicketDetails</h1>
<h3>Fill the details </h3>
</div>
<hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Add" class="was-validated">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TicketNumber" class="control-label"></label>
                    <input asp-for="TicketNumber" class="form-control " required />
                    <span asp-validation-for="TicketNumber" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="PassengerName" class="control-label"></label>
                    <input asp-for="PassengerName" class="form-control" required />
                    <span asp-validation-for="PassengerName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="PHNumber" class="control-label"></label>
                    <input asp-for="PHNumber" class="form-control " required />
                    <span asp-validation-for="PHNumber" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="EmailID" class="control-label"></label>
                    <input asp-for="EmailID" class="form-control " required />
                    <span asp-validation-for="EmailID" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="JourneyDate" class="control-label"></label>
                    <input asp-for="JourneyDate" class="form-control " required />
                    <span asp-validation-for="JourneyDate" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="LocationId" class="control-label"></label>
                    <select asp-for="LocationId" class="form-control " asp-items="@(new SelectList(Model.Locations,"LocationId","LocationName"))">
                        <option value="0">--Select--</option>

                    </select>
                    <span asp-validation-for="Locations" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                </div>
            </form>
            
</div>
        </div>

    <div>
        <a  style="font-size:small" asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
